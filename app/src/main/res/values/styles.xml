<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TimeText">
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/monserrat_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:minLines">2</item>
    </style>

    <style name="ItemDesc">
        <item name="android:fontFamily">@font/monserrat_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="ItemNav">
        <item name="android:fontFamily">@font/monserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="ImageNav">
        <item name="android:padding">18dp</item>
    </style>

    <style name="textParagraph">
        <item name="android:fontFamily">@font/monserrat_regular</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textBigPricePricing">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/monserrat_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textSelectedPriority">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/monserrat_regular</item>
    </style>

    <style name="viewLineSelectedPriority">
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>
    
    <style name="textCompareTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/monserrat_regular</item>
    </style>

    <style name="imageTip">
        <item name="android:src">@drawable/alert_condon</item>
    </style>

    <style name="SeekBarColor">
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="TextTitleMethodDescription">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/monserrat_bold</item>
    </style>


</resources>
